{
  "name": "Télé-information to MQTT",
  "version": "0.1",
  "slug": "teleinfo2mqtt",
  "description": "Extract EDF télé-information from you electrical counter (France only), and publish it to MQTT broker",
  "arch": [ "armhf", "armv7", "aarch64", "amd64", "i386" ],
  "startup": "services",
  "auart": true,
  "ports": {
    "80/tcp": 8093
  },
  "ports_description": {
    "8093/tcp": "Télé-information to Mqtt's Rest Api"
  },
  "boot": "auto",
  "options": {
    "SerialPort": {
        "Port": "/dev/ttyUSB0",
        "Baudrate": 1200,
        "Parity": "Even",
        "DataBits": 7,
        "StopBits": "One",
        "Handshake": "None"
    },
      "MqttBroker": {
        "Hostname": "localhost",
        "TcpPort": 1883
    },
    "Misc": {
      "WattHoursGranularity": 1000,
      "MqttPrefix": "homeassistant"
    }
  },
  "schema": {
    "SerialPort": {
        "Port": "str",
        "Baudrate": "int",
        "Parity": "str",
        "DataBits": "int",
        "StopBits": "str",
        "Handshake": "str"
    },
      "MqttBroker": {
        "Hostname": "str",
        "TcpPort": "int",
        "Username": "str?",
        "Password": "str?"
    },
    "Misc": {
      "WattHoursGranularity": "int",
      "MqttPrefix": "str"
    }
  }
}
